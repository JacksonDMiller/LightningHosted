<body>
  <div class="page-wrapper">
    <div class="nav-wrapper">
      <div class="grad-bar"></div>
      <nav class="navbar">
          <div id='logo'><a href="/"><h1>LightningHosted</h1></a></div>
        <div class="menu-toggle" id="mobile-menu">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
        <ul class="nav no-search">
          <li class="nav-item"><a href="/">Home</a></li>
          <li class="nav-item"><a href="/auth/#">Posts</a></li>
          <li class="nav-item"><a href="/noauth/about">About</a></li>
          <li class="nav-item"><a href="/noauth/contact">Contact</a></li>
          <li class="nav-item"><a id="logInStatus" class="<%= logInStatus %>" href="/noauth/login">Log In</a></li>
        </ul>
      </nav>
    </div>
    <section class="headline">
      <a href="/">
        <a href="/"><h1>Share Images And Stack Sats</h1></a>
    </section>
    <div id='ad1' class='ad'>
      <iframe data-aa="1259139" src="//ad.a-ads.com/1259139?size=468x60" scrolling="no" style="width:468px; height:60px; border:0px; padding:0; overflow:hidden" allowtransparency="true"></iframe>
    </div>
    <div id="contactPageContainer">
      <h1 class='heading'>Contact Us</h1>
      <div id="form-messages"></div>
      <form id="ajax-contact" method="post" action="./contact/submit">

        <div class="field">
          <label class='email' for="email">Email:</label>
          <input type="email" id="email" name="email" required>
        </div>

        <div class="field">
          <label for="subject">Subject:</label>
          <input type="text" id="subject" name="subject" required>
        </div>

        <div class="field">
          <label for="message">Message:</label>
          <textarea id="message" name="message" required></textarea>
        </div>

        <div class="field">
          <button class='btn' type="submit">Send</button>
        </div>
      </form>
    </div>
  </div>
</body>
<footer>
  <script src="/script.js"></script>
  <script src="/contact-script.js"></script>
</footer>
